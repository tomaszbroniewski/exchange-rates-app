{
  "ConnectionStrings": {
    "MAIN": "Server=ExchangeRatesAppdb,1433; Database=ExchangeRatesApp; Uid=sa; Pwd=abcDEF123#; Encrypt=No;"
  },
  "MainSettings": {
    "DbTransactionTimeout": "00:20:00",
    "ClientAddress": "http://localhost:4200"
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "./Logs/info-.log",
          "outputTemplate": "[{Timestamp:dd.MM.yyyy HH:mm:ss} {Level:u3}] ({SourceContext}) {Message}{NewLine:1}{Exception:1}",
          "rollingInterval": "Day",
          "restrictedToMinimumLevel": "Information",
          "retainedFileCountLimit": null
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "./Logs/warnings-.log",
          "outputTemplate": "[{Timestamp:dd.MM.yyyy HH:mm:ss} {Level:u3}] ({SourceContext}) {Message}{NewLine:1}{Exception:1}",
          "rollingInterval": "Day",
          "restrictedToMinimumLevel": "Warning",
          "retainedFileCountLimit": null
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "./Logs/errors-.log",
          "outputTemplate": "[{Timestamp:dd.MM.yyyy HH:mm:ss} {Level:u3}] ({SourceContext}) {Message}{NewLine:1}{Exception:1}",
          "rollingInterval": "Day",
          "restrictedToMinimumLevel": "Error",
          "retainedFileCountLimit": null
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "./Logs/critical-.log",
          "outputTemplate": "[{Timestamp:dd.MM.yyyy HH:mm:ss} {Level:u3}] ({SourceContext}) {Message}{NewLine:1}{Exception:1}",
          "rollingInterval": "Day",
          "restrictedToMinimumLevel": "Fatal",
          "retainedFileCountLimit": null
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithProcessId",
      "WithThreadId"
    ],
    "Properties": {
      "ApplicationName": "Serilog.WebApplication"
    }
  }
}